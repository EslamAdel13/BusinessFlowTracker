{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@shared/*": ["../shared/*"],
      "@assets/*": ["../attached_assets/*"]
    }
  },
  "include": ["src/**/*"],
  "references": [{ "path": "../tsconfig.json" }],

  "exclude": ["node_modules", "vercel", "next", "out", "dist", "lib/cjs", "lib/esm", "lib"]
}
